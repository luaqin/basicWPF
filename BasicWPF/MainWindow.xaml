<Window x:Class="BasicWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Margin="5" x:Name="textBoxName" BorderBrush="Black"/>
            <Button Content="AddAge" Margin="5" Click="Button_Click"/>
            <TextBox Margin="5" x:Name="textBox1" Text="{Binding Path=Value,ElementName=slider1}" BorderBrush="Black"/>
            <Slider x:Name="slider1" Maximum="100" Minimum="0" Margin="5"/>
            <TextBox x:Name="textBox2" Margin="5" BorderBrush="Black"/>
            <TextBox x:Name="textBox3" Margin="5" BorderBrush="Black"/>
            <TextBox x:Name="textBox4" Margin="5" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Window>
